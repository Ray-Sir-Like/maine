{
    "command": "/opt/kunkka/bin/kunkka-server --config /etc/kunkka/kunkka.conf",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/kunkka.conf",
            "dest": "/etc/kunkka/kunkka.conf",
            "owner": "root",
            "perm": "0600"
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/kunkka",
            "owner": "root:root",
            "recurse": true
        }
    ]
}
