{
    "command": "/opt/mysqld_exporter/mysqld_exporter --config.my-cnf=/opt/mysqld_exporter/my.cnf --web.listen-address={{ monitoring_interface_address }}:{{ hawkeye_mysqld_exporter_port }}",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/my.cnf",
            "dest": "/opt/mysqld_exporter/my.cnf",
            "owner": "root",
            "perm": "0600"
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/hawkeye",
            "owner": "root:kolla",
            "recurse": true
        }
    ]
}
